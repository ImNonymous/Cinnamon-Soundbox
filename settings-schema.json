{
    "showApps": {
        "type": "checkbox",
        "description": "Show application volume controls",
        "default": false
    },
    
    "exceedNormVolume": {
        "type": "checkbox",
        "description": "Allow volume control to exceed 100% volume",
        "default": false
    },
    
    "appearance": {
        "type": "header",
        "description": "Appearance"
    },
    
    "compact": {
        "type": "checkbox",
        "description": "Use compact layout",
        "default": false
    },
    
    "showArt": {
        "type": "checkbox",
        "description": "Show album artwork",
        "default": true
    },
    
    "theme": {
        "type": "radiogroup",
        "description": "Theme",
        "default": "clean",
        "options": {
            "Clean": "clean",
            "Shadow": "shadow",
            "Ghost": "ghost",
            "Ice": "ice",
            "Use Theme Default (not supported by all themes)": "soundbox"
        }
    }
}